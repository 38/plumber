if("$ENV{SANITIZER}" STREQUAL "yes")
	if("$ENV{SAN_FLAGS}" STREQUAL "")
		set(SAN_FLAGS "undefined,address")
	else("$ENV{SAN_FLAGS}" STREQUAL "")
		set(SAN_FLAGS "$ENV{SAN_FLAGS}")
	endif("$ENV{SAN_FLAGS}" STREQUAL "")
	set(COMPILER_CFLAGS "${COMPILER_CFLAGS} -fsanitize=${SAN_FLAGS} -DSANITIZER")
	set(COMPILER_CXXFLAGS "${COMPILER_CXXFLAGS} -fsanitize=${SAN_FLAGS} -DSANITIZER")
	set(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS_DEBUG} -fsanitize=${SAN_FLAGS}")
	set(CMAKE_SHARED_LINKER_FLAGS "${CMAKE_SHARED_LINKER_FLAGS_DEBUG} -fsanitize=${SAN_FLAGS}")
endif("$ENV{SANITIZER}" STREQUAL "yes")
